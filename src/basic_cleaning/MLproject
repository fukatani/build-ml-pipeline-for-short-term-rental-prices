name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Artifact name to be cleaned.
        type: string

      output_artifact:
        description: Cleaned artifact name
        type: string

      output_type:
        description: Type of output artifact
        type: string

      output_description:
        description: Description for output artifact
        type: string

      min_price:
        description: If row price is smaller than min_price, row will be discarded
        type: string

      max_price:
        description: If row price is larger than max_price, row will be discarded
        type: string


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
